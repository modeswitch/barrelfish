-- Mackerel 1 device descriptions
[ mackerel (options arch) f 
  | f <- [ "acpi_ec",
           "ahci_hba",
           "ahci_port",
           "amd_vmcb",
           "arm",
           "arm_icp_pic",
           "arm_icp_pit",
           "audio_nbm",
           "cmos",
           "cpuid",
           "e1000",
           "ehci_cap",
           "ehci_op",
           "hpet",
           "ht_config",
           "ia32",
           "lpc_bridge",
           "lpc_dma",
           "lpc_ioapic",
           "lpc_pci_config",
           "lpc_pic",
           "lpc_rtc",
           "lpc_rtc_spaces",
           "lpc_timer",
           "pc16550d_mem",
           "pci_hdr0",
           "pci_hdr1",
           "pl011_uart",
           "rtl8029as",
           "rtl8029as_spaces",
           "tulip",
           "x86_64_pagetable",
           "xapic",
           "pci_hdr0_mem",
           "rck",
           "eMAC",
           "crb_sif"
         ], arch <- allArchitectures
] ++

-- Mackerel 2 device descriptions
[ mackerel2 (options arch) f
  | f <- [ "ac97_base_audio", 
           "ac97_ext_audio",
           "ac97_ext_codec",
           "ac97_ext_modem",
           "pc16550d",
           "ixp2800_icp_pic",
           "ixp2800_uart",
           "ixp2800_icp_pit",
           "lpc_kbd"
         ], arch <- allArchitectures
]
